<section>
  <h2>Estadias Ativas</h2>
  <table style="border-collapse: collapse; width: 100%;">
    <thead>
      <tr>
        <th style="text-align: center; padding: 5px;">Código da Reserva</th>
        <th style="text-align: center; padding: 5px;">Quarto Reservado</th>
        <th style="text-align: center; padding: 5px;">Data de entrada</th>
        <th style="text-align: center; padding: 5px;">Data de saída</th>
        <th style="text-align: center; padding: 5px;">Quantidade de hóspedes</th>
      </tr>
    </thead>
    <tbody>
      <% @in_progress_bookings.each do |ip_booking| %>
        <tr>
          <td style="text-align: center; padding: 5px;"><%= link_to ip_booking.code, booking_path(ip_booking.id) %></td>
          <td style="text-align: center; padding: 5px;"><%= ip_booking.room.name %></td>
          <td style="text-align: center; padding: 5px;"><%= l(ip_booking.check_in_date) %></td>
          <td style="text-align: center; padding: 5px;"><%= l(ip_booking.check_out_date) %></td>
          <td style="text-align: center; padding: 5px;"><%= ip_booking.guests_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @in_progress_bookings.empty? %>
    <p>Você não tem estadias ativas no momento.</p>
  <% end %>
</section> 