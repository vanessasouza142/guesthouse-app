<div>
  <%= render partial: 'shared/error_messages', locals: { object: @guesthouse } %>
</div>

<%= form_with(model: @guesthouse) do |f| %>
<div class="row">
  <div class="field col-md-4">
    <%= f.label :corporate_name, class: "form-label" %>
    <%= f.text_field :corporate_name, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :brand_name, class: "form-label" %>
    <%= f.text_field :brand_name, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :registration_number, class: "form-label" %>
    <%= f.number_field :registration_number, class: "form-control" %>
  </div>
</div>

<div class="row">
  <div class="field col-md-4">
    <%= f.label :phone_number, class: "form-label" %>
    <%= f.number_field :phone_number, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="row">
  <div class="field col-md-4">
    <%= f.label :neighborhood, class: "form-label" %>
    <%= f.text_field :neighborhood, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :state, class: "form-label" %>
    <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :city, class: "form-label" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
</div>

<div class="row">
  <div class="field col-md-4">
    <%= f.label :postal_code, class: "form-label" %>
    <%= f.number_field :postal_code, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :payment_method, class: "form-label" %>
    <%= f.text_field :payment_method, class: "form-control" %>
  </div>
</div>

<div class="row">
  <div class="field col-md-4">
    <%= f.label :pet_agreement, class: "form-label" %>
    <%= f.text_field :pet_agreement, class: "form-control" %>
  </div>
  <div class="field col-md-4">
    <%= f.label :usage_policy, class: "form-label" %>
    <%= f.text_area :usage_policy, class: "form-control" %>
  </div>
  <div class="field col-md-2">
    <%= f.label :check_in, class: "form-label" %>
    <%= f.time_field :check_in, class: "form-control" %>
  </div>
  <div class="field col-md-2">
    <%= f.label :check_out, class: "form-label" %>
    <%= f.time_field :check_out, class: "form-control" %>
  </div>
</div>

<div>
  <%= f.submit 'Salvar', class: "btn btn-primary" %>
</div>
<% end %>
<br>
<div>
  <%= link_to 'Voltar', root_path %>
</div>
