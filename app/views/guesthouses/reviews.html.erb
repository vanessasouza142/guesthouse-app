<h2>Avaliações</h2>
<section>
  <div style="width: 80%; margin: 0 auto;">
    <table style="border-collapse: collapse; width: 100%;">
      <thead>
        <tr>
          <th style="text-align: center; padding: 5px;">Código da Hospedagem</th>
          <th style="text-align: center; padding: 5px;">Avaliador</th>
          <th style="text-align: center; padding: 5px;">Nota</th>
          <th style="text-align: center; padding: 5px;">Avaliação</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td style="text-align: center; padding: 5px;"><%= link_to review.booking.code, booking_path(review.booking.id) %></td>
            <td style="text-align: center; padding: 5px;"><%= review.booking.user.name %></td>
            <td style="text-align: center; padding: 5px;"><%= number_with_precision(review.score, separator: ',') %></td>
            <td style="text-align: center; padding: 5px;"><%= review.review_text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @reviews.empty? %>
    <p>Você não tem avaliações no momento.</p>
  <% end %>
</section>
