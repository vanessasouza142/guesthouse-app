<h2>Registrar Avaliação da Hospedagem <%= @booking.code %></h2>
<section>
  <div>
    <%= render partial: 'shared/error_messages', locals: { object: @review } %>
  </div>

  <%= form_with(model: [@booking, @review]) do |f| %>
    <div class="field col-md-4">
      <%= f.label :score, class: "form-label" %>
      <%= f.text_field :score, type: 'number', step: '0.1', class: "form-control" %>
      <p>(Nota de 0 a 5, sendo zero considerada como pessima e cinco como ótima)</p>
    </div>
    <div class="field col-md-4">
      <%= f.label :review_text, class: "form-label" %>
      <%= f.text_area :review_text, class: "form-control" %>
    </div>
    <br>

    <div>
      <%= f.submit 'Salvar', class: "btn btn-primary" %>
    </div>
  <% end %>
</section>