<section>
  <h2><%= @room.name %></h2>
  <p><strong>Descrição: </strong><%= @room.description %></p>
  <p><strong>Área (m²): </strong><%= @room.area %></p>
  <p><strong>Quantidade max. de hóspedes: </strong><%= @room.max_guest %></p>
  <p><strong>Valor da diária: </strong><%= number_to_currency(@room.current_daily_price(Date.today), unit: "R$", separator: ",", delimiter: ".") %></p>

  <h4><strong>O que esse quarto oferece:</strong></h4>
  <% @room.attributes.each do |attribute, value| %>
    <% if value == true %>
      <ul>
        <li><%= Room.human_attribute_name(attribute) %></li>
      </ul>
    <% end %>
  <% end %>
</section>

<% if @booking.errors.any? %>
<p>Verifique os erros abaixo:</p>
  <ul>
    <% @booking.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<section>
  <h2>Consulte a Disponibilidade do <%= @room.name %>:</h2>
  <%= form_with(model: [@room, @booking], url: check_availability_room_bookings_path(@room, @booking), method: :post) do |f| %>
  <div>
    <%= f.label :check_in_date %>
    <%= f.date_field :check_in_date %>
  </div>
  <div>
    <%= f.label :check_out_date %>
    <%= f.date_field :check_out_date %>
  </div>
  <div>
    <%= f.label :guests_number %>
    <%= f.number_field :guests_number %>
  </div>
  <div>
    <%= f.submit 'Consultar' %>
  </div>
  <% end %>
</section>