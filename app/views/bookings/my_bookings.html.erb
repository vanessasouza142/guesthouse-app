          <td style="text-align: center; padding: 5px;"><%= my_booking_f.room.name %></td>
          <td style="text-align: center; padding: 5px;"><%= l(my_booking_f.check_in_date) %></td>
          <td style="text-align: center; padding: 5px;"><%= l(my_booking_f.check_out_date) %></td>
          <td style="text-align: center; padding: 5px;"><%= my_booking_f.guests_number %></td>
        </tr>
      <% end %>
    </tbody>
