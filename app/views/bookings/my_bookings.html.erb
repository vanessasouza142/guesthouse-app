<h2>Minhas Reservas</h2>
<section>
  <h3>Reservas Pendentes:</h3>
  <table style="border-collapse: collapse; width: 100%;">
    <thead>
      <tr>
        <th style="text-align: center; padding: 5px;">Código da Reserva</th>
        <th style="text-align: center; padding: 5px;">Quarto</th>
        <th style="text-align: center; padding: 5px;">Data de entrada</th>
        <th style="text-align: center; padding: 5px;">Data de saída</th>
        <th style="text-align: center; padding: 5px;">Quantidade de hóspedes</th>
      </tr>
    </thead>
    <tbody>
      <% @my_bookings_pending.each do |my_booking_p| %>
        <tr>
          <td style="text-align: center; padding: 5px;"><%= link_to my_booking_p.code, booking_path(my_booking_p.id) %></td>
          <td style="text-align: center; padding: 5px;"><%= my_booking_p.room.name %></td>
          <td style="text-align: center; padding: 5px;"><%= l(my_booking_p.check_in_date) %></td>
          <td style="text-align: center; padding: 5px;"><%= l(my_booking_p.check_out_date) %></td>
          <td style="text-align: center; padding: 5px;"><%= my_booking_p.guests_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @my_bookings_pending.empty? %>
    <p>Você não tem reservas pendentes no momento.</p>
  <% end %>
</section> 

