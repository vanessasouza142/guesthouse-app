<div>
  <%= render partial: 'shared/error_messages', locals: { object: @custom_price } %>
</div>

<%= form_with(model: [@room, @custom_price]) do |f| %>
<div class="field col-md-4">
  <%= f.label :begin_date, class: "form-label" %>
  <%= f.date_field :begin_date, class: "form-control" %>
</div>
<div class="field col-md-4">
  <%= f.label :end_date, class: "form-label" %>
  <%= f.date_field :end_date, class: "form-control" %>
</div>
<div class="field col-md-4">
  <%= f.label :price, class: "form-label" %>
  <%= f.number_field :price, class: "form-control" %>
</div>
<br>
<div>
  <%= f.submit 'Salvar', class: "btn btn-primary" %>
</div>
<% end %>
<br>
<div>
  <%= link_to 'Voltar', room_path(@custom_price.room) %>
</div>
