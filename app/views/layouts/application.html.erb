<!DOCTYPE html>
<html>
  <head>
    <title>GuesthouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>

  <body class="container-fluid">    
    <header>
      <%= link_to root_path do %>
        <h1>Pousadaria</h1>
      <% end %>
      <nav>
          <% if user_signed_in? %>
            <% if current_user.guesthouse %>           
              <%= link_to 'Minha Pousada', my_guesthouse_path %> |
              <%= link_to 'Reservas', bookings_guesthouse_path(current_user.guesthouse) %> |
              <%= link_to 'Estadias Ativas', active_stays_guesthouse_path(current_user.guesthouse) %> |
              <%= link_to 'Avaliações', reviews_guesthouse_path(current_user.guesthouse) %> |
            <% elsif current_user.guest? %>
              <%= link_to 'Minhas Reservas', my_bookings_path %> | 
            <% end %>           
              <%= current_user.name %> |
              <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to 'Entrar na Conta', new_user_session_path %>
              <%= form_with(url: search_guesthouses_path, method: :get) do |f| %>
              <%= f.label :query, 'Buscar Pousada' %>
              <%= f.text_field :query %>
              <%= f.submit 'Buscar' %>
            <% end %>
          <% end %>
      </nav>
    </header>
    <main>
      <div>
        <%= alert %>
        <%= notice %>
      </div>
      <%= yield %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
